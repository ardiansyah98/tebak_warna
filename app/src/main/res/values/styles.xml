<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarGame" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#633e19</item>
        <item name="colorPrimaryDark">#633e19</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="ButtonmainMenuStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/mainmenustyle_btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonmainMenuStyle" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/mainmenustyle_btn_default_holo_light</item>
    </style>

    <style name="ButtonbtnJawabStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/btnjawabstyle_btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonbtnJawabStyle" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btnjawabstyle_btn_default_holo_light</item>
    </style>

    <style name="ButtonbtnResetStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/btnresetstyle_btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonbtnResetStyle" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btnresetstyle_btn_default_holo_light</item>
    </style>

    <style name="ButtonbtnSetStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/btnsetstyle_btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonbtnSetStyle" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btnsetstyle_btn_default_holo_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
