<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_warna"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalkboard"
    tools:context="com.unj.pgpaud.guesswhat.WarnaMerahActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_lives"
                android:id="@+id/imageLives1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_lives"
                android:id="@+id/imageLives2"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="60dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_lives"
                android:id="@+id/imageLives3"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="100dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:src="@drawable/tebakwarna"
                    android:id="@+id/textTebakWarna"
                    android:layout_marginTop="32dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <TextView
            android:textSize="27sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button1"
                style="@style/ButtonbtnSetStyle"/>
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button2"
                style="@style/ButtonbtnSetStyle" />
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button3"
                style="@style/ButtonbtnSetStyle" />
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button4"
                style="@style/ButtonbtnSetStyle" />
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button5"
                style="@style/ButtonbtnSetStyle" />
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button6"
                style="@style/ButtonbtnSetStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button7"
                style="@style/ButtonbtnSetStyle"/>
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button8"
                style="@style/ButtonbtnSetStyle" />
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button9"
                style="@style/ButtonbtnSetStyle" />
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button10"
                style="@style/ButtonbtnSetStyle" />
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button11"
                style="@style/ButtonbtnSetStyle"/>
            <Button
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button12"
                style="@style/ButtonbtnSetStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:text="Jawab"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnJawab"
                style="@style/ButtonbtnJawabStyle"/>

            <Button
                android:text="Reset"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnReset"
                style="@style/ButtonbtnResetStyle"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>
